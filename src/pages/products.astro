---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.vue';
import ProductsHero from '@components/ProductsHero.vue';
import Products from '@components/Products.vue';
import TrendditClientBlogShowcase from '@components/TrendditClientBlogShowcase.vue';
import ProductsBlogShowcase from '@components/ProductsBlogShowcase.vue';
