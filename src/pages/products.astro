  ogImage="/images/blog/trends-intelligence-cards.png"
  ogType="website"
>
  <Header client:load />
  <main>
    <ProductsHero client:load />
    <Products client:load />
    <TrendditClientBlogShowcase client:load />
    <ProductsBlogShowcase client:load />
  </main>
  <Footer client:load />
