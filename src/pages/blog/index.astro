---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.vue';
import Footer from '@components/Footer.vue';
import BlogList from '@components/BlogList.vue';

const posts = await import.meta.glob('./*.{md,mdx}', { eager: true });

// Convert glob imports to array format and filter/sort
const postArray = Object.entries(posts).map(([path, post]) => ({ ...post, url: path.replace('./', '/blog/').replace(/\.mdx?$/, '') }));

// Custom sorting function to prioritize Moments posts
const sortedPosts = postArray
  .filter(post => post.url !== '/blog/')
  .sort((a, b) => {
    // Check if posts are Moments posts
    const aIsMoments = a.frontmatter.tags?.includes('Moments') || false;
    const bIsMoments = b.frontmatter.tags?.includes('Moments') || false;
    
    // Moments posts get priority
    if (aIsMoments && !bIsMoments) return -1;
    if (!aIsMoments && bIsMoments) return 1;
    
    // Within the same priority group, sort alphabetically by title for consistency
    return a.frontmatter.title?.localeCompare(b.frontmatter.title || '') || 0;
  });
---

<Layout 
  title="Trenddit Blog - AI Business Intelligence Insights & Guides"
  description="Explore AI-powered business intelligence insights, Moments platform features, multi-agent systems, and enterprise AI strategies and implementations."
  keywords="AI business intelligence blog, Moments platform, AI insights, business intelligence guides, multi-agent systems, enterprise AI, competitive intelligence, AI-powered research, business intelligence tools, AI automation"
  ogImage="/images/logo.png"
  ogType="website"
>
  <Header client:load />
  <main class="min-h-screen">
    <div class="container mx-auto px-4 py-16">
      <div class="mx-auto max-w-4xl">
        <h1 class="text-4xl font-bold mb-4">Blog</h1>
        <p class="text-lg text-gray-600 mb-12">
          Insights, use cases, and guides for AI-powered business intelligence
        </p>
        
        <BlogList client:load posts={sortedPosts} />
      </div>
    </div>
  </main>
  <Footer client:load />
</Layout>