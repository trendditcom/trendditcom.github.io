---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.vue';
import Footer from '@components/Footer.vue';

const posts = await Astro.glob('./*.{md,mdx}');
const sortedPosts = posts
  .filter(post => post.url !== '/blog/')
  .sort((a, b) => a.frontmatter.title.localeCompare(b.frontmatter.title));
---

<Layout title="Trenddit Blog - AI Automation Insights">
  <Header client:load />
  <main class="min-h-screen">
    <div class="container mx-auto px-4 py-16">
      <div class="mx-auto max-w-4xl">
        <h1 class="text-4xl font-bold mb-4">Blog</h1>
        <p class="text-lg text-gray-600 mb-12">
          Insights, use cases, and guides for AI automation
        </p>
        
        <div class="space-y-8">
          {sortedPosts.length === 0 ? (
            <p class="text-gray-500">No blog posts yet. Check back soon!</p>
          ) : (
            sortedPosts.map(post => (
              <article class="border-b pb-8">
                <a href={post.url} class="group">
                  <div class="flex gap-6">
                    {post.frontmatter.featuredImage && (
                      <div class="flex-shrink-0 w-48 h-32 overflow-hidden rounded-lg">
                        <img 
                          src={post.frontmatter.featuredImage} 
                          alt={post.frontmatter.title}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        />
                      </div>
                    )}
                    <div class="flex-1">
                      <h2 class="text-2xl font-semibold mb-2 group-hover:text-blue-600 transition-colors">
                        {post.frontmatter.title}
                      </h2>
                      <p class="mt-3 text-gray-600">{post.frontmatter.excerpt}</p>
                    </div>
                  </div>
                </a>
              </article>
            ))
          )}
        </div>
      </div>
    </div>
  </main>
  <Footer client:load />
</Layout>