---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.vue';
import Footer from '@components/Footer.vue';
import BlogList from '@components/BlogList.vue';

const posts = await import.meta.glob('./*.{md,mdx}', { eager: true });

// Convert glob imports to array format and filter/sort
const postArray = Object.entries(posts).map(([path, post]) => ({ ...post, url: path.replace('./', '/blog/').replace(/\.mdx?$/, '') }));

// Custom sorting function to prioritize Trenddit Client posts
const sortedPosts = postArray
  .filter(post => post.url !== '/blog/')
  .sort((a, b) => {
    // Check if posts are Trenddit Client posts
    const aIsTrendditClient = a.frontmatter.tags?.includes('Trenddit Client') || false;
    const bIsTrendditClient = b.frontmatter.tags?.includes('Trenddit Client') || false;
    
    // Trenddit Client posts get priority
    if (aIsTrendditClient && !bIsTrendditClient) return -1;
    if (!aIsTrendditClient && bIsTrendditClient) return 1;
    
    // Within the same priority group, sort by date (newest first)
    return new Date(b.frontmatter.date) - new Date(a.frontmatter.date);
  });
---

<Layout 
  title="Trenddit Blog - AI Automation Insights & Guides"
  description="Explore the latest insights, use cases, and comprehensive guides on AI automation, Trenddit Memo features, enterprise AI strategies, and lean development practices. Learn from real-world implementations."
  keywords="AI automation blog, Trenddit blog, AI insights, AI guides, AI use cases, Trenddit Memo tutorials, enterprise AI, lean automation, AI development, AI best practices, Chrome extension guides, AI workflow optimization"
  ogImage="/images/logo.png"
  ogType="website"
>
  <Header client:load />
  <main class="min-h-screen">
    <div class="container mx-auto px-4 py-16">
      <div class="mx-auto max-w-4xl">
        <h1 class="text-4xl font-bold mb-4">Blog</h1>
        <p class="text-lg text-gray-600 mb-12">
          Insights, use cases, and guides for AI automation
        </p>
        
        <BlogList client:load posts={sortedPosts} />
      </div>
    </div>
  </main>
  <Footer client:load />
</Layout>