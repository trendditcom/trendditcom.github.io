---
import Layout from './Layout.astro';
import Header from '@components/Header.vue';
import Footer from '@components/Footer.vue';

export interface Props {
  title: string;
  date: string;
  author?: string;
  excerpt?: string;
}

const { title, date, author = 'Trenddit Team', excerpt } = Astro.props;
---

<Layout title={`${title} - Trenddit Blog`}>
  <Header client:load />
  <main class="min-h-screen">
    <article class="container mx-auto px-4 py-16">
      <div class="mx-auto max-w-3xl">
        <header class="mb-8">
          <h1 class="text-4xl font-bold mb-4">{title}</h1>
          <div class="flex items-center gap-4 text-sm text-gray-600">
            <time>{new Date(date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}</time>
            <span>•</span>
            <span>{author}</span>
          </div>
          {excerpt && <p class="mt-4 text-lg text-gray-600">{excerpt}</p>}
        </header>
        
        <div class="prose prose-lg max-w-none">
          <slot />
        </div>
        
        <div class="mt-12 pt-8 border-t">
          <a href="/blog" class="text-blue-600 hover:text-blue-700">← Back to Blog</a>
        </div>
      </div>
    </article>
  </main>
  <Footer client:load />
</Layout>